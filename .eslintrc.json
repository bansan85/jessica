{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["google"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "object-curly-spacing": [2, "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "plugins": ["html"],
  "ignorePatterns": [
    "**/node_modules/*",
    "**/doc/highlight/highlight.min.js",
    "**/vcpkg/*",
    "**/src/angular/dist"
  ]
}
